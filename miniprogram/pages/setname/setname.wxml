<!--pages/setname/setname.wxml-->

<view class="content">
  <view class="title">新用户注册</view>

  <form bindsubmit="formSubmit">
    <view class="item">
      <view class="name">真实姓名:  </view>
      <view class="val"><input name="true_name" type="text"/></view>
    </view>

    <view class="item">
      <view class="name">邀请码:  </view>
      <view class="val"><input name="invite_code" type="text"/></view>
    </view>

    <button class="btn" type="primary" form-type="submit">确认提交</button>
  </form>
</view>
