<view class="page">
    <view class="weui-form">
        <view class="weui-form__text-area">
            <view class="weui-form__title">员工管理</view>
            <view class="weui-form__desc">更改员工姓名及权限</view>
        </view>

        <form bindsubmit="formSubmit">
            <view class="weui-form__control-area">
                <view class="weui-cells__group weui-cells__group_form">
                    <view class="weui-cells__title">员工信息</view>
                    <view class="weui-cells weui-cells_form weui-cells_after-title">
                        <view class="{{warn_enable ? 'weui-cell weui-cell_warn' : 'weui-cell'}}">
                            <view class="weui-cell__hd"><label class="weui-label">姓名</label></view>
                            <view class="weui-cell__bd">
                                <input class="weui-input" name="name" type="text" maxlength="10" bindinput="nameInput" value="{{manage_user.true_name}}" placeholder="请输入中文姓名"/>
                            </view>
                            <view wx:if="{{warn_enable}}" class="weui-cell__ft">
                                <icon type="warn" size="23" color="#E64340"></icon>
                            </view>
                        </view>

                        <view class="weui-cell">
                            <view class="weui-cell__hd"><label class="weui-label">权限</label></view>
                            <view class="weui-cell__bd">
                                <slider name="level" max="{{max_level}}" value="{{manage_user.permission_level}}" show-value/>
                            </view>
                        </view>
                    </view>
                </view>
            </view>

            <view class="weui-form__tips-area">
                <view class="weui-form__tips">点击确定更改员工信息</view>
            </view>

            <view class="weui-form__opr-area">
                <button type="primary" form-type="submit" disabled="{{!button_enable}}">确定</button>
            </view>
        </form>
    </view>
</view>
