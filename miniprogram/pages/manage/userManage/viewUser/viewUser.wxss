/* pages/manage/userManage/viewUser/viewUser.wxss */

.title {
    margin-top: 20rpx;
    text-align: center;
    font-size: 40rpx;
}

.person {
    margin-top: 40rpx;
    height: 100rpx;
    width: 100%;
    background: rgb(250, 250, 250);
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.userdetail {
    display: flex;
    flex-direction: row;
    margin-left: 40rpx;
    width: 100%;
    font-size: 34rpx;
}

.name {
    display: inline-block;
    height: 100%;
    min-width: 100px;
    text-align: justify;
    text-align-last: justify;
}

.level {
    position: absolute;
    right: 50px;
}
