<!--index.wxml-->
<view class="container">

  <view class="userinfo">
    <button wx:if="{{!logged}}" open-type="getUserInfo" bindgetuserinfo="onGetUserInfo" plain="true"> 点击授权登录 </button>
    <block wx:else>
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>

  <view class="userNickName">
    <text>昵称: {{userInfo.nickName}}</text>
  </view>

  <view class="userOpenId">
    <text>微信OpenId:</text>
    <text>{{openid}}</text>
  </view>

  <view class="userId">
    <text>库存ID:</text>
    <text>{{uid}}</text>
  </view>

  <view class="userLevel">
    <text>权限等级: {{level}}</text>
  </view>

  <view class="section_level">
    <text class="section_title">设置权限等级</text>
    <view class="body-view">
      <slider bindchange="levelchange" max="3" value="{{level}}" disabled="{{!logged}}"show-value/>
    </view>
  </view>
</view>
