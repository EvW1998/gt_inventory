<view class="bg">
  <view class="nav">
    <scroll-view class="scroll-view_H" scroll-x="true" >
      <view class="scroll-view_H">
        <view wx:for="{{menu}}" wx:key="_id">
          <view class="{{flag==item.menu_id?'select':'normal'}}" id="{{item.menu_id}}" bindtap="switchNav">{{item.menu_name}}</view>
        </view>
      </view>
    </scroll-view>
  </view>
</view>

<swiper current="{{currentTab}}" style="height:1500px">
  <view wx:for="{{submenu}}" wx:key="index">
    <swiper-item>
      <view wx:for="{{item}}" wx:for-item="subitem" wx:key="_id">
        <view class="sub">
          <navigator url="../cup1/cup1" open-type="navigate" class="sub-text">
            <text>{{subitem.submenu_name}}</text>
          </navigator>
        </view>
      </view>
    </swiper-item>
  </view>
</swiper>
