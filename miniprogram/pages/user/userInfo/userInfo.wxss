/* pages/user/userInfo/userInfo.wxss */

.userinfo {
    margin: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.userNickName, .userOpenId, .userId, .userLevel{
    margin-top: 40rpx;
    height: 140rpx;
    width: 100%;
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.userNickName, .userOpenId, .userId, .userLevel {
    height: auto;
    flex-direction: column;
}

.section_level {
    text-align: center;
    margin-top: 40rpx;
    height: 140rpx;
    width: 80%;
}

.btn {
    padding-top:50rpx;
}

.version {
    bottom: 30rpx;
    position: absolute;
    text-align: center;
    left: 0;
    right: 0;
    color: rgb(200, 200, 200);
    font-size: 30rpx;
}
