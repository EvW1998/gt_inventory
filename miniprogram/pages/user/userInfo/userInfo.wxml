<!--pages/user/userInfo/userInfo.wxml-->

<view class="page">
    <view class="weui-form">
        <view class="weui-form__text-area">
            <view class="userinfo">
                <button wx:if="{{!logged}}" open-type="getUserInfo" bindgetuserinfo="onGetUserInfo" plain="true">授权微信登录</button>
                <block wx:else>
                    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
                    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
                </block>
            </view>
        </view>


        <block wx:if="{{logged}}">
            <view class="weui-form__control-area">
                <view class="weui-cells__group weui-cells__group_form">
                    <view class="weui-cells weui-cells_form weui-cells_after-title">
                        <block wx:if="{{!loginSuccess}}">
                            <view class="weui-cell">
                                <view class="weui-cell__hd">
                                    <label class="weui-label link_label" bindtap="retryLogin">点击重新尝试登录</label>
                                </view>
                            </view>
                        </block>

                        <block wx:elif="{{!registered && logged}}">
                            <view class="weui-cell">
                                <view class="weui-cell__hd">
                                    <label class="weui-label link_label" bindtap="userRegister">点击注册信息</label>
                                </view>
                            </view>
                        </block>

                        <block wx:else>
                            <view class="weui-cell">
                                <view class="weui-cell__hd">
                                    <view class="weui-label">姓名</view>
                                </view>
                                <view class="weui-cell__bd">
                                    <view>{{user_name}}</view>
                                </view>
                            </view>

                            <view class="weui-cell">
                                <view class="weui-cell__hd">
                                    <view class="weui-label">当前权限</view>
                                </view>
                                <view class="weui-cell__bd">
                                    <view>{{permission_level}}级</view>
                                </view>
                            </view>

                            <view class="weui-cell">
                                <view class="weui-cell__hd">
                                    <view class="weui-label">当前餐厅</view>
                                </view>

                                <view class="weui-cell__bd">
                                    <view>{{restaurant_name}}</view>
                                </view>

                                <picker bindchange="changeRestaurant" value="{{restaurant_index}}" range="{{restaurant_array}}" disabled="{{restaurant_array.length === 0}}">
                                    <view class="weui-cell__ft weui-cell__ft_in-access">切换</view>
                                </picker>
                            </view>

                            <view class="weui-cell">
                                <view class="weui-cell__hd">
                                    <view class="weui-label link_label">添加餐厅</view>
                                </view>
                            </view>
                        </block>
                    </view>
                </view>
            </view>
        </block>
    </view>

    <view class="weui-footer weui-footer_fixed-bottom">
        <navigator url="{{upgrade_page}}" class="weui-footer__text">
            <view>{{version}}</view>
        </navigator>
    </view>
</view>
