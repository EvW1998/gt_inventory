<!--pages/user/userInfo/userInfo.wxml-->

<view class="container">

    <view class="userinfo">
        <button wx:if="{{!logged}}" open-type="getUserInfo" bindgetuserinfo="onGetUserInfo" plain="true"> 点击授权登录 </button>
        <block wx:else>
            <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
            <text class="userinfo-nickname">{{userInfo.nickName}}</text>
        </block>
    </view>

    <view class="userNickName">
        <text>姓名: {{true_name}}</text>
    </view>

    <view class="userOpenId">
        <text>微信OpenId:</text>
        <text>{{openid}}</text>
    </view>

    <view class="userId">
        <text>库存ID:</text>
        <text>{{uid}}</text>
    </view>

    <view class="btn">
        <button wx:if="{{!registered && logged}}" type="primary" bindtap="registerUser"> 点击注册信息 </button>
    </view>

    <view class="userLevel">
        <text>权限等级: {{permission_level}}</text>
    </view>

    <navigator url="{{upgrade_page}}" class="version">
        <text>{{version}}</text>
    </navigator>

</view>
